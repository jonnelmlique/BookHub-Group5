@{
    Layout = "~/Views/Shared/Layout/_UserPage.cshtml";
}
@model List<BookHub_Group5.Models.Domain.sales>
<link href="~/css/admin/books.css" rel="stylesheet" />

<div class="books">
    <div class="search-book">
        <div class="search-bar">
            <h2> PURCHASE HISTORY</h2>
            
        </div>
        <div class="buttons">
         
        </div>
    </div>


    <div class="book-table">
<table id="books">
    <thead>
        <tr>
            <th>Book Name</th>
            <th>Price</th>
            <th>Author</th>
            <th>Genre</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var sales in Model)
        {
            <tr>
                <td>@sales.BookTitle</td>
                <td>@sales.Price</td>
                <td>@sales.Author</td>
                <td>@sales.Genre</td>
            </tr>
        }
    </tbody>
</table>
</div>

</div>
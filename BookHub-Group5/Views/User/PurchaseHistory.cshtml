@{
    Layout = "~/Views/Shared/Layout/_UserPage.cshtml";
}
@model List<BookHub_Group5.Models.Domain.sales>
<link href="~/css/admin/books.css" rel="stylesheet" />

<h2> PURCHASE HISTORY</h2>

<table id="books">
    <thead>
        <tr>
            <th>Book Name</th>
            <th>Price</th>
            <th>Author</th>
            <th>Genre</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var sales in Model)
        {
            <tr>
                <td>@sales.BookTitle</td>
                <td>@sales.Price</td>
                <td>@sales.Author</td>
                <td>@sales.Genre</td>
            </tr>
        }
    </tbody>
</table>